datasource db {
  provider = "sqlite"
  url      = "file:database.db"
}

// generator
generator client {
  provider = "java -jar /Users/matt/Code/prisma-client-scala/plugin-generator/target/scala-2.13/prisma-client-scala-plugin-generator-assembly-0.0.0-SNAPSHOT.jar"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  views     Int     @default(0)
  published Boolean @default(false)
  author    User?   @relation(fields: [author_id], references: [id])
  author_id Int?
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}